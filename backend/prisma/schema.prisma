generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  resumes   Resume[]
}

model Resume {
  id             Int       @id @default(autoincrement())
  user           User      @relation(fields: [userId], references: [id])
  userId         Int
  title          String
  fullName       String
  email          String
  phone          String?
  
  education      Json?     // array of education entries
  experience     Json?     // array of experience entries
  skills         Json?     // array of skills
  projects       Json?     // array of projects
  certifications Json?     // array of certifications
  other          Json?     // any extra info
  content        String?   // full text version of resume if needed

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  analyses       AnalysisResult[]
  recommendations JobRecommendation[]
}

model AnalysisResult {
  id         Int       @id @default(autoincrement())
  resume     Resume    @relation(fields: [resumeId], references: [id])
  resumeId   Int
  result     Json      // AI analysis output: keywords, scores, suggestions
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model JobRecommendation {
  id         Int       @id @default(autoincrement())
  resume     Resume    @relation(fields: [resumeId], references: [id])
  resumeId   Int
  title      String
  description String?
  score      Float?    // AI relevance score
  createdAt  DateTime  @default(now())
}
